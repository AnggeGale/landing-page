---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard">
  <section class="dashboard-hero">
    <div class="container">
      <div class="section-header">
        <h1>Teacher Dashboard</h1>
        <p>Your central hub for managing classes and students</p>
      </div>
    </div>
  </section>

  <section class="dashboard-preview">
    <div class="container">
      <div class="dashboard-grid">
        <div class="dashboard-card">
          <div class="card-header">
            <div class="card-icon">📅</div>
            <h2>Today's Schedule</h2>
          </div>
          <div class="schedule-list">
            <div class="schedule-item">
              <div class="time">8:00 AM</div>
              <div class="class-info">
                <h3>Mathematics</h3>
                <p>Grade 10 - Section A</p>
              </div>
            </div>
            <div class="schedule-item">
              <div class="time">10:00 AM</div>
              <div class="class-info">
                <h3>Science</h3>
                <p>Grade 10 - Section B</p>
              </div>
            </div>
            <div class="schedule-item">
              <div class="time">2:00 PM</div>
              <div class="class-info">
                <h3>Mathematics</h3>
                <p>Grade 10 - Section C</p>
              </div>
            </div>
          </div>
        </div>

        <div class="dashboard-card">
          <div class="card-header">
            <div class="card-icon">⚡</div>
            <h2>Quick Actions</h2>
          </div>
          <div class="action-buttons">
            <button class="action-btn">
              <span class="action-icon">📝</span>
              Take Attendance
            </button>
            <button class="action-btn">
              <span class="action-icon">📊</span>
              Grade Assignments
            </button>
            <button class="action-btn">
              <span class="action-icon">📋</span>
              Create Lesson Plan
            </button>
            <button class="action-btn">
              <span class="action-icon">💬</span>
              Message Parents
            </button>
          </div>
        </div>

        <div class="dashboard-card">
          <div class="card-header">
            <div class="card-icon">📈</div>
            <h2>Recent Activities</h2>
          </div>
          <div class="activity-list">
            <div class="activity-item">
              <span class="activity-icon">📊</span>
              <div class="activity-info">
                <h3>Graded Math Quiz</h3>
                <p>Grade 10 - Section A</p>
              </div>
            </div>
            <div class="activity-item">
              <span class="activity-icon">📝</span>
              <div class="activity-info">
                <h3>Updated Attendance</h3>
                <p>Grade 10 - Section B</p>
              </div>
            </div>
            <div class="activity-item">
              <span class="activity-icon">💬</span>
              <div class="activity-info">
                <h3>Parent Meeting</h3>
                <p>John Doe's Parents</p>
              </div>
            </div>
          </div>
        </div>

        <div class="dashboard-card">
          <div class="card-header">
            <div class="card-icon">📊</div>
            <h2>Class Overview</h2>
          </div>
          <div class="class-stats">
            <div class="stat-item">
              <span class="stat-label">Total Students</span>
              <span class="stat-value">120</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Attendance Rate</span>
              <span class="stat-value">95%</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Average Grade</span>
              <span class="stat-value">85</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Pending Tasks</span>
              <span class="stat-value">3</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout> 