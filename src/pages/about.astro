---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About TWOP">
  <section class="about-hero">
    <div class="container">
      <div class="section-header">
        <h1 class="hero-title">About <span class="gradient-text">TWOP</span></h1>
        <p class="hero-description">Empowering educators with innovative technology solutions</p>
      </div>
      <div class="about-grid">
        <div class="about-card">
          <h2>Our Mission</h2>
          <p>To revolutionize education by providing teachers with powerful tools that streamline their workflow, enhance student engagement, and improve learning outcomes.</p>
        </div>
        <div class="about-card">
          <h2>Our Vision</h2>
          <p>To become the leading platform for educational workflow optimization, setting new standards for teacher productivity and student success.</p>
        </div>
        <div class="about-card">
          <h2>Our Values</h2>
          <p>Innovation, Excellence, Collaboration, and Student Success guide everything we do at TWOP.</p>
        </div>
      </div>
    </div>
    <div class="hero-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
  </section>

  <section class="about-content">
    <div class="container">
      <div class="team-section">
        <div class="section-header">
          <h2>Meet Our Team</h2>
          <p>The passionate individuals behind TWOP</p>
        </div>
        <div class="team-grid">
          <div class="team-member">
            <div class="member-image">
              <img src="/team/angelika.jpg" alt="Angelika Gernade Dumsang" onerror="this.onerror=null; this.src='/team/default-avatar.png'">
            </div>
            <div class="member-info">
              <h3>Angelika Gernade Dumsang</h3>
              <p class="member-role">Lead Developer</p>
              <p class="member-bio">Passionate about creating innovative solutions for education</p>
            </div>
          </div>
          <div class="team-member">
            <div class="member-image">
              <img src="/team/lukkanit.jpg" alt="Loreano Dee Louis Mariano Lukkanit" onerror="this.onerror=null; this.src='/team/default-avatar.png'">
            </div>
            <div class="member-info">
              <h3>Loreano Dee Louis Mariano Lukkanit</h3>
              <p class="member-role">Lead Developer</p>
              <p class="member-bio">Dedicated to improving educational technology</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>